{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["src/config/*"],
      "@shared/*": ["src/shared/*"]

      },
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./**/*"
],
"exclude": [
    "./plugins/**/*",
    "./typings/**/*",
    "./dist/**/*"
]
}
